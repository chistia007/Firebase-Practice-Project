<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetImages">

    <ImageView
        android:id="@+id/imgGet"
        android:layout_width="292dp"
        android:layout_height="197dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/edtImgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Image name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imgGet"
        app:layout_constraintStart_toStartOf="@+id/imgGet"
        app:layout_constraintTop_toBottomOf="@+id/imgGet" />

    <Button
        android:id="@+id/btnGetImg"
        android:layout_width="210dp"
        android:layout_height="61dp"
        android:layout_marginTop="88dp"
        android:text="Get Image"
        app:layout_constraintEnd_toEndOf="@+id/edtImgName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtImgName"
        app:layout_constraintTop_toBottomOf="@+id/edtImgName" />

</androidx.constraintlayout.widget.ConstraintLayout>